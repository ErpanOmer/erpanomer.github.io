---
import { Image } from "astro:assets";
import me from "@/images/me.jpg";
---

<header
    class="sticky top-0 z-50 w-full border-b border-gh-border bg-gh-bg/80 backdrop-blur-lg backdrop-saturate-150"
>
    <nav
        class="max-w-6xl mx-auto px-4 sm:px-6 flex items-center justify-between h-14 sm:h-16"
    >
        <a href="/" class="flex items-center gap-2 sm:gap-3 group">
            <div class="relative">
                <Image
                    src={me}
                    width={32}
                    height={32}
                    class="w-8 h-8 sm:w-9 sm:h-9 rounded-full ring-2 ring-gh-border group-hover:ring-indigo-500 transition-all duration-300"
                    alt="ErpanOmer"
                />
                <span
                    class="absolute -bottom-0.5 -right-0.5 w-2.5 h-2.5 sm:w-3 sm:h-3 bg-green-500 rounded-full border-2 border-gh-bg"
                ></span>
            </div>
            <span
                class="font-medium text-sm text-gh-muted group-hover:text-white transition-colors hidden sm:inline"
            >
                ErpanOmer
            </span>
        </a>

        <div class="flex items-center gap-0.5 sm:gap-1">
            <a
                href="/blog"
                class="px-2.5 sm:px-3 py-2 rounded-lg text-sm text-gh-muted hover:text-white hover:bg-gh-surface transition-all"
            >
                博客
            </a>
            <a
                href="/projects"
                class="px-2.5 sm:px-3 py-2 rounded-lg text-sm text-gh-muted hover:text-white hover:bg-gh-surface transition-all"
            >
                项目
            </a>
            <a
                href="https://juejin.cn/user/3878732754331096"
                class="p-2 rounded-lg text-gh-muted hover:text-white hover:bg-gh-surface transition-all"
                title="掘金"
                target="_blank"
            >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path
                        d="M12 14.316l7.454-5.89-2.022-1.6L12 10.566l-5.432-3.74-2.022 1.6 7.454 5.89zm0 2.802l-6.54-5.17-1.96 1.55 8.5 6.72 8.5-6.72-1.96-1.55-6.54 5.17zM12 7.11l5.45 3.74 1.96-1.55L12 3.56 4.59 9.3l1.96 1.55L12 7.11z"
                    ></path>
                </svg>
            </a>
            <a
                href="https://github.com/ErpanOmer"
                class="p-2 rounded-lg text-gh-muted hover:text-white hover:bg-gh-surface transition-all"
                title="GitHub"
                target="_blank"
            >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path
                        d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"
                    ></path>
                </svg>
            </a>
        </div>
    </nav>
</header>
